<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cipher Lounge - Profile</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js"></script>
</head>

<body
  class="bg-gradient-to-br from-gray-900 via-black to-gray-900 text-white font-mono min-h-screen flex flex-col overflow-hidden">
  <%- include('./partials/header') %>

    <!-- MAIN SECTION -->
    <section class="text-center mt-20 px-6 relative">
      <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[600px] h-[400px] bg-green-500/20 rounded-full blur-3xl">
      </div>

      <h1 class="text-5xl md:text-6xl font-extrabold mb-4 relative z-10">
        Your Profile
      </h1>
      <p class="text-gray-300 mb-10 relative z-10">
        Welcome back, <%= (user?.first_name || '' ) %>
          <%= (user?.last_name || '' ) %>.
      </p>
    </section>

    <!-- CARD -->
    <section class="max-w-3xl mx-auto w-full px-6">
      <div class="sign-up-card bg-white/5 border border-white/10 rounded-2xl p-8 shadow-xl relative overflow-hidden">
        <!-- floating dots (kept your vibe) -->
        <div class="absolute inset-0 pointer-events-none">
          <div class="dot absolute w-2 h-2 bg-green-400 rounded-full opacity-60" style="top:15%; left:10%;"></div>
          <div class="dot absolute w-2 h-2 bg-green-400 rounded-full opacity-60" style="top:65%; left:80%;"></div>
          <div class="dot absolute w-2 h-2 bg-green-400 rounded-full opacity-60" style="top:40%; left:50%;"></div>
        </div>

        <h2 class="text-2xl font-semibold mb-6">Account Details</h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label class="block mb-2 text-sm text-gray-300">First Name</label>
            <input type="text" readonly value="<%= user?.first_name || '' %>"
              class="w-full p-3 rounded-xl bg-white/10 text-white border border-green-400/20 outline-none" />
          </div>

          <div>
            <label class="block mb-2 text-sm text-gray-300">Last Name</label>
            <input type="text" readonly value="<%= user?.last_name || '' %>"
              class="w-full p-3 rounded-xl bg-white/10 text-white border border-green-400/20 outline-none" />
          </div>

          <div class="md:col-span-2">
            <label class="block mb-2 text-sm text-gray-300">Username</label>
            <input type="text" readonly value="<%= user?.username || '' %>"
              class="w-full p-3 rounded-xl bg-white/10 text-white border border-green-400/20 outline-none" />
          </div>
        </div>

        <div class="mt-8 flex flex-col md:flex-row items-start md:items-center justify-between gap-4">
          <p class="text-gray-300">
            Status:
            <span class="font-semibold">
              <%= user?.is_admin ? 'Admin' : 'Member' %>
                <% if (user?.is_member && !user?.is_admin) { %> (Member)<% } %>
            </span>
          </p>

          <% if (!user?.is_admin) { %>
            <a href="/access"
              class="inline-block px-5 py-3 rounded-xl bg-green-500/90 text-white font-semibold hover:bg-green-400 transition">
              Request Admin Access
            </a>
            <% } %>
        </div>
        <div class="mt-4">
          <p class="text-sm">
            <strong>Admin access:</strong>
            <% if (user && user.is_admin) { %>
              <span class="text-green-400">Yes</span>
              <% } else { %>
                <span class="text-gray-400">No</span>
                <a class="ml-2 underline text-green-400" href="/access">Request admin access</a>
                <% } %>
          </p>
        </div>

      </div>
    </section>

    <script>
      // decorative animation (kept your style)
      const dots = document.querySelectorAll(".dot");
      dots.forEach((d, i) => {
        gsap.to(d, {
          x: gsap.utils.random(-30, 30, 1),
          y: gsap.utils.random(-30, 30, 1),
          duration: 4 + i * 2,
          repeat: -1,
          yoyo: true,
          ease: "sine.inOut"
        });
      });

      const card = document.querySelector(".sign-up-card");
      if (card) {
        card.addEventListener("mouseenter", () => gsap.to(card, { scale: 1.02, duration: 0.4 }));
        card.addEventListener("mouseleave", () => gsap.to(card, { scale: 1, duration: 0.4 }));
      }
    </script>
</body>

</html>